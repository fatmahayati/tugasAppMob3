<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="354dp">

        <ImageView
            android:id="@+id/ivRS"
            android:layout_width="match_parent"
            android:layout_height="317dp"
            android:layout_weight="1"
            android:onClick="clickRS"
            app:srcCompat="@drawable/rs" />

        <ImageView
            android:id="@+id/ivvihara"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_weight="1"
            android:onClick="onclickvihara"
            app:srcCompat="@drawable/vihara" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/ivMasjid"
            android:layout_width="match_parent"
            android:layout_height="237dp"
            android:layout_weight="1"
            android:onClick="onclickMasjid"
            app:srcCompat="@drawable/masjid" />

        <ImageView
            android:id="@+id/ivhotel"
            android:onClick="onclickhotelll"
            android:layout_width="match_parent"
            android:layout_height="229dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/hotelll" />
    </TableRow>
</LinearLayout>